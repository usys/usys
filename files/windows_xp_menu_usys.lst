#debug off

#find --set-root /boot/uwsys.id
#fontfile /boot/fonts/hzk16f
#splashimage /boot/splash/mars.xpm.gz
#color white/black
#blue/light-gray
#foreground 000000
#background abcdef
#configfile /boot/menus/main.lst

timeout 10
default 1
debug off
color green/black white/blue white/black black/black
        
title Windows XP Professional 
        chainloader (hd0,0)/ntldr

title Boot 2ed Hard disk
        chainloader (hd1,0)+1
        map (hd0) (hd1)
        map (hd1) (hd0)

title Boot Debian GNU/Linux 
    kernel /boot/vmlinuz-686-bigmem root=LABEL=LINUX video=uvesafb:mode_option=1024x768-16@60 quiet
    initrd /boot/initrd.img-686-bigmem

title -------------------------------------------------------------------- 
        clear
title Boot Debian GNU/Linux Live
    kernel /boot/debian/live/vmlinuz boot=live live-media=/dev/sda1 live-media-path=/boot/debian/live nolocales username=xiaoranzzz hostname=myplace.live vga=791
    initrd /boot/debian/live/initrd.img

title Boot XRDOS
    #find --set-root /boot/images/xrdos.img
    map --mem /boot/images/xrdos.img (fd0)
    map --floppies=1
    map --hook
    chainloader (fd0)+1
    rootnoverify (fd0)

title Boot ARDOS
	#find --set-root /boot/images/ardos.img
    map --mem /boot/images/ardos.img (fd0)
    map --floppies=1
    map --hook
    chainloader (fd0)+1
    rootnoverify (fd0)

title Boot DynPE
	#find --set-root /pe/system/dynpe.ldr
	chainloader /pe/system/dynpe.ldr

title Boot LmtPE
    chainloader /pe/system/lmtpe.ldr
	
title Boot GNU/Linux Damn Small 
	#find --set-root /boot/dsl/menu.lst
	configfile /boot/dsl/menu.lst
		
title Boot Debian Installer
    configfile /boot/debian/installer/submenu.lst
    
			
title -------------------------------------------------------------------- 
        clear

title REBOOT 
        reboot

title SHUTDOWN
        halt
		
